<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="sheridan_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">@color/orange_500</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="activity_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">@dimen/double_margin</item>
        <item name="android:layout_marginTop">@dimen/double_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">@color/pink_500</item>
    </style>

    <style name="io_label">
        <item name="android:gravity">right</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="input_label" parent="io_label">
        <item name="android:textColor">@color/purple_500</item>
    </style>

    <style name="output_label" parent="io_label"/>

    <style name="output_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/small_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>